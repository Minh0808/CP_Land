{
   "version": 2,
   "builds": [
     {
       "src": "Server/server.ts",
       "use": "@vercel/node"
     },
     {
       "src": "package.json",
       "use": "@vercel/static-build",
       "config": { "distDir": "dist" }
     }
   ],
   "routes": [
    { "src": "^/login$",           "dest": "Server/server.ts" },
    { "src": "^/signup$",          "dest": "Server/server.ts" },
    { "src": "^/ping$",            "dest": "Server/server.ts" },
    { "src": "^/db-check$",        "dest": "Server/server.ts" },
    { "src": "^/mail-check$",      "dest": "Server/server.ts" },
    { "src": "^/slides(?:/.*)?$",  "dest": "Server/server.ts" },
    { "src": "^/panels(?:/.*)?$",  "dest": "Server/server.ts" },
    { "src": "^/uploads/(.*)$",    "dest": "Server/server.ts" },
    { "src": "/(.*)",              "dest": "/index.html" }
  ],
   "functions": {
     "Server/server.ts": {
       "includeFiles": "Server/public/uploads/**"
     }
   }
 }
 